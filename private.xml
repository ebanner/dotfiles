<?xml version="1.0"?>
<root>
    <appdef>
        <appname>TERMINAL</appname>
        <equal>com.apple.Terminal</equal>
    </appdef>
    <item>
        <name>Terminal</name>
        <item>
            <name>KANA to Right Control</name>
            <identifier>private.kana_to_right_control_TERMINAL</identifier>
            <only>TERMINAL</only>
            <autogen>
                __KeyToKey__
                KeyCode::JIS_KANA,
                KeyCode::CONTROL_R
            </autogen>
        </item>
        <item>
            <name>3 to Control</name>
            <identifier>private.three_to_control</identifier>
            <appendix>Still 3 when pressed in isolation</appendix>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::KEY_3,
                KeyCode::CONTROL_L,,
                KeyCode::KEY_3
            </autogen>
        </item>
    </item>

    <appdef>
        <appname>EMACS</appname>
        <equal>org.gnu.Emacs</equal>
    </appdef>
    <item>
        <name>Emacs</name>
        <item>
            <name>EISUU to Left Control</name>
            <identifier>private.left_control_to_left_control</identifier>
            <appendix>Tab when pressed in isolation</appendix>
            <only>EMACS</only>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::JIS_EISUU,
                KeyCode::CONTROL_L,
                KeyCode::TAB
            </autogen>
        </item>
        <item>
            <name>KANA to Right Control</name>
            <identifier>private.kana_to_right_control</identifier>
            <appendix>Puts right control right under the right thumb</appendix>
            <only>EMACS</only>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::JIS_KANA,
                KeyCode::CONTROL_R,
                KeyCode::DELETE
            </autogen>
        </item>
        <item>
            <name>Left Command to Left Alt</name>
            <identifier>private.left_command_to_left_alt</identifier>
            <appendix>Makes Left alt accessible with the left thumb</appendix>
            <only>EMACS</only>
            <autogen>
                __KeyToKey__
                KeyCode::COMMAND_L,
                KeyCode::OPTION_L
            </autogen>
        </item>
        <item>
            <name>Right Command to Right Alt</name>
            <identifier>private.right_command_to_right_alt</identifier>
            <appendix>Makes Right alt accessible with the right thumb</appendix>
            <only>EMACS</only>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::COMMAND_R,
                KeyCode::OPTION_R,
                KeyCode::JIS_YEN
            </autogen>
        </item>
        <item>
            <name>Control to Yen</name>
            <identifier>private.control_to_yen</identifier>
            <appendix>Control to Yen so we can map it to escape in Emacs</appendix>
            <only>EMACS</only>
            <autogen>
                __KeyToKey__
		KeyCode::CONTROL_L,
                KeyCode::JIS_YEN
            </autogen>
        </item>	
	<item>
            <name>Right Underscore to Yen</name>
            <identifier>private.right_underscore_to_yen</identifier>
            <appendix>Right underscore to Yen so we can map it to escape in Emacs</appendix>
	    <only>EMACS</only>
            <autogen>
                __KeyToKey__
                KeyCode::JIS_UNDERSCORE,
                KeyCode::JIS_YEN
            </autogen>
        </item>	
    </item>

    <item>
        <name>Highest Row</name>
        <item>
            <name>Tilda</name>
            <identifier>private.tilda</identifier>
            <autogen> __KeyToKey__ KeyCode::ESCAPE, ModifierFlag::SHIFT_R, KeyCode::JIS_HAT, ModifierFlag::SHIFT_L</autogen>
        </item>
        <item>
            <name>Backtick</name>
            <identifier>private.backtick</identifier>
            <autogen> __KeyToKey__ KeyCode::ESCAPE, KeyCode::JIS_ATMARK, ModifierFlag::SHIFT_L</autogen>
        </item>
    </item>

    <item>
        <name>Number Row</name>
        <item>
            <name>At</name>
            <identifier>private.at</identifier>
            <autogen>__KeyToKey__ KeyCode::KEY_2, ModifierFlag::SHIFT_R, KeyCode::JIS_ATMARK</autogen>
        </item>
        <item>
            <name>2 to Tab</name>
            <identifier>private.two_to_tab</identifier>
            <autogen>
                __KeyToKey__
                KeyCode::KEY_2,
                KeyCode::TAB
            </autogen>
        </item>
        <item>
            <name>3 to Command</name>
            <identifier>private.three_to_command</identifier>
            <appendix>Still 3 when pressed in isolation</appendix>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::KEY_3,
                KeyCode::COMMAND_L,
                KeyCode::KEY_3
            </autogen>
        </item>
        <item>
            <name>4 to Shift</name>
            <identifier>private.four_to_shift</identifier>
            <appendix>Still 4 when pressed in isolation</appendix>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::KEY_4,
                KeyCode::SHIFT_L,
                KeyCode::KEY_4
            </autogen>
        </item>
        <item>
            <name>Hat</name>
            <identifier>private.hat</identifier>
            <autogen> __KeyToKey__ KeyCode::KEY_6, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT, KeyCode::JIS_HAT</autogen>
        </item>
        <item>
            <name>Ampersand</name>
            <identifier>private.ampersand</identifier>
            <autogen> __KeyToKey__ KeyCode::KEY_7, ModifierFlag::SHIFT_L, KeyCode::KEY_6, ModifierFlag::SHIFT_L</autogen>
        </item>
        <item>
            <name>7 to Command</name>
            <identifier>private.seven_to_control</identifier>
            <appendix>Still 7 when pressed in isolation</appendix>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::KEY_7,
                KeyCode::COMMAND_L,
                KeyCode::KEY_7
            </autogen>
        </item>
        <item>
            <name>Asterisk</name>
            <identifier>private.asterisk</identifier>
            <autogen> __KeyToKey__ KeyCode::KEY_8, ModifierFlag::SHIFT_L, KeyCode::JIS_COLON, ModifierFlag::SHIFT_L</autogen>
        </item>
        <item>
            <name>8 to Shift</name>
            <identifier>private.eight_to_shift</identifier>
            <appendix>Still 8 when pressed in isolation</appendix>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::KEY_8,
                KeyCode::SHIFT_R,
                KeyCode::KEY_8
            </autogen>
        </item>
        <item>
            <name>9 to Enter</name>
            <identifier>private.nine_to_enter</identifier>
            <autogen>
                __KeyToKey__
                KeyCode::KEY_9,
                KeyCode::ENTER,
            </autogen>
        </item>
        <item>
            <name>Right Paren</name>
            <identifier>private.right_paren</identifier>
            <autogen> 
                __KeyToKey__
                KeyCode::KEY_0, ModifierFlag::SHIFT_L,
                KeyCode::KEY_9, ModifierFlag::SHIFT_L
            </autogen>
        </item>
        <item>
            <name>Left Paren</name>
            <identifier>private.left_paren</identifier>
            <autogen> 
                __KeyToKey__
                KeyCode::KEY_0,
                KeyCode::KEY_8,
                ModifierFlag::SHIFT_L
            </autogen>
        </item>
        <item>
            <name>Underscore</name>
            <identifier>private.underscore</identifier>
            <autogen> __KeyToKey__ KeyCode::MINUS, ModifierFlag::SHIFT_L, KeyCode::JIS_UNDERSCORE</autogen>
        </item>
        <item>
            <name>Plus</name>
            <identifier>private.plus</identifier>
            <autogen> __KeyToKey__ KeyCode::JIS_HAT, ModifierFlag::SHIFT_L, KeyCode::KEYPAD_PLUS</autogen>
        </item>
        <item>
            <name>Equals</name>
            <identifier>private.equals</identifier>
            <autogen> __KeyToKey__ KeyCode::JIS_HAT, KeyCode::KEYPAD_EQUAL</autogen>
        </item>
    </item>

    <item>
        <name>Top Row</name>
        <item>
            <name>Fix Left Bracket</name>
            <identifier>private.fix_left_bracket</identifier>
            <autogen> __KeyToKey__ KeyCode::JIS_ATMARK, KeyCode::JIS_BRACKET_LEFT</autogen>
        </item>
        <item>
            <name>Fix Right Bracket</name>
            <identifier>private.fix_right_bracket</identifier>
            <autogen> __KeyToKey__ KeyCode::JIS_BRACKET_LEFT, KeyCode::JIS_BRACKET_RIGHT</autogen>
        </item>
    </item>

    <item>
        <name>Home Row</name>
        <item>
            <name>Control to Escape</name>
            <identifier>private.control_to_escape</identifier>
            <appendix>Escape when pressed in isolation</appendix>
            <autogen>
                __KeyOverlaidModifier__
                KeyCode::CONTROL_L,
                KeyCode::CONTROL_L,
                KeyCode::ESCAPE
            </autogen>
        </item>
	<item>
            <name>Colon</name>
            <identifier>private.colon</identifier>
            <autogen>
                __KeyToKey__
                KeyCode::SEMICOLON,
		ModifierFlag::SHIFT_L,
                KeyCode::JIS_COLON
            </autogen>
        </item>
        <item>
            <name>Double Quote</name>
            <identifier>private.double_quote</identifier>
            <autogen> __KeyToKey__ KeyCode::JIS_COLON, ModifierFlag::SHIFT_L, KeyCode::KEY_2, ModifierFlag::SHIFT_L </autogen>
        </item>
        <item>
            <name>Single Quote</name>
            <identifier>private.single_quote</identifier>
            <autogen> __KeyToKey__ KeyCode::JIS_COLON, KeyCode::KEY_7, ModifierFlag::SHIFT_L </autogen>
        </item>
        <item>
            <name>Pipe</name>
            <identifier>private.pipe</identifier>
            <autogen> __KeyToKey__ KeyCode::JIS_BRACKET_RIGHT, ModifierFlag::SHIFT_L, KeyCode::JIS_YEN</autogen>
        </item>
    </item>

    <item>
        <name>Bottom Row</name>
        <item>
            <name>KANA to Right Command</name>
            <identifier>private.kana_to_right_command</identifier>
            <autogen>
                __KeyToKey__
                KeyCode::JIS_KANA,
                KeyCode::COMMAND_R
            </autogen>
        </item>
        <item>
            <name>EISUU to Left Command</name>
            <identifier>private.eisuu_to_left_command</identifier>
            <autogen>
                __KeyToKey__
                KeyCode::JIS_EISUU,
                KeyCode::COMMAND_L
            </autogen>
        </item>
    </item>
</root>
