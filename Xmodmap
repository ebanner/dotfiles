! Wide colemak

! Make the Windows key a Mode_Switch key
remove Mod4 = Super_L
keycode 133 = Mode_switch

! Fix Right Alt
keycode 204 = Alt_L

! Make Caps Lock a Control key
keycode  66 = Control_L
add Control = Control_L

! Switch semicolon and apostrophe
keycode  33 = apostrophe quotedbl
keycode  43 = h H h H
keycode  44 = n N j J
keycode  45 = e E k K
keycode  46 = i I l L
keycode  48 = semicolon colon
